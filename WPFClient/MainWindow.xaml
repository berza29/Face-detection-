<Window x:Class="WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    
        <Grid>
            <Image x:Name="imgWebcam" Stretch="Fill" Height="200" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Image x:Name="copy" Stretch="Fill" Height="200" Width="200" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <TextBox x:Name="txtPersonName" Height="30" Width="130" Background="#EA5822"  Margin="400,270,0,0"/>
            <Label  Height="30" Width="130" Background="Gainsboro" Margin="10,50,0,20">  </Label>
            <Button x:Name="btnAddName" Click="Add_Name"
                    Content="Add Name" 
                    HorizontalAlignment="Left" 
                    Margin="440,460,0,0"
                    VerticalAlignment="Top"
                    Width="120" Height="30" 
                    Background="#FF13FF00"/>
          <Button x:Name="btnTrain" Click="Train_Image"
                    Content="Train" 
                    HorizontalAlignment="Left" 
                    Margin="440,500,0,0"
                    VerticalAlignment="Top"
                    Width="120" Height="30" 
                    Background="#FF13FF00"/>

            <Button x:Name="btnCapture" Click="BtnCapture_OnClick"
                    Content="Capture" 
                    HorizontalAlignment="Left" 
                    Margin="440,530,0,0"
                    VerticalAlignment="Top"
                    Width="120" Height="30" 
                    Background="#FF13FF00"/>
            
            
        </Grid>
</Window>
